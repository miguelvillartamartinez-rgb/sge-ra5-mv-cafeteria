<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mv_cafeteria_alergeno_view_tree" model="ir.ui.view">
        <field name="name">cafe.alergeno.tree</field>
        <field name="model">cafe.alergeno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="codigo"/>
            </tree>
        </field>
    </record>

    <record id="mv_cafeteria_alergeno_view_form" model="ir.ui.view">
        <field name="name">cafe.alergeno.form</field>
        <field name="model">cafe.alergeno</field>
        <field name="arch" type="xml">
            <form string="Alérgeno">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="codigo"/>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mv_cafeteria_alergeno_action" model="ir.actions.act_window">
        <field name="name">Alérgenos</field>
        <field name="res_model">cafe.alergeno</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
