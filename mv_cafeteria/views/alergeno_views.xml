<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- ================= TREE ================= -->
  <record id="mv_cafeteria_alergeno_view_tree" model="ir.ui.view">
    <field name="name">cafe.alergeno.tree</field>
    <field name="model">cafe.alergeno</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="codigo"/>
      </tree>
    </field>
  </record>

  <!-- ================= FORM ================= -->
  <record id="mv_cafeteria_alergeno_view_form" model="ir.ui.view">
    <field name="name">cafe.alergeno.form</field>
    <field name="model">cafe.alergeno</field>
    <field name="arch" type="xml">
      <form string="Alérgeno">
        <sheet>

          <div class="oe_title">
            <h1>
              <field name="name" placeholder="Nombre del alérgeno..."/>
            </h1>
          </div>

          <group>
            <group>
              <field name="codigo" placeholder="Ej: GLUTEN, LACTOSA..."/>
            </group>
          </group>

        </sheet>
      </form>
    </field>
  </record>

  <!-- ================= KANBAN (BONITO) ================= -->
  <record id="mv_cafeteria_alergeno_view_kanban" model="ir.ui.view">
    <field name="name">cafe.alergeno.kanban</field>
    <field name="model">cafe.alergeno</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_small_column">
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_card p-2">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <div class="o_kanban_record_title">
                    <strong>
                      <i class="fa fa-exclamation-triangle me-1" role="img" aria-label="Alérgeno"></i>
                      <field name="name"/>
                    </strong>
                  </div>

                  <div class="mt8">
                    <span class="badge rounded-pill bg-light text-dark">
                      <i class="fa fa-tag me-1" role="img" aria-label="Código"></i>
                      <field name="codigo"/>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- ================= ACTION ================= -->
  <record id="mv_cafeteria_alergeno_action" model="ir.actions.act_window">
    <field name="name">Alérgenos</field>
    <field name="res_model">cafe.alergeno</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="views" eval="[
      (ref('mv_cafeteria_alergeno_view_kanban'), 'kanban'),
      (ref('mv_cafeteria_alergeno_view_tree'), 'tree'),
      (ref('mv_cafeteria_alergeno_view_form'), 'form')
    ]"/>
  </record>

</odoo>
