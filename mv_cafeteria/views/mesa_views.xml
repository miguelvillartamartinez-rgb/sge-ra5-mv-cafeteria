<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= TREE ================= -->
    <record id="mv_cafeteria_mesa_view_tree" model="ir.ui.view">
        <field name="name">cafe.mesa.tree</field>
        <field name="model">cafe.mesa</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ubicacion"/>
                <field name="capacidad"/>
                <field name="activa"/>
            </tree>
        </field>
    </record>

    <!-- ================= FORM ================= -->
    <record id="mv_cafeteria_mesa_view_form" model="ir.ui.view">
        <field name="name">cafe.mesa.form</field>
        <field name="model">cafe.mesa</field>
        <field name="arch" type="xml">
            <form string="Mesa">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ubicacion"/>
                        <field name="capacidad"/>
                        <field name="activa"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= KANBAN (BONITO Y LIMPIO) ================= -->
    <record id="mv_cafeteria_mesa_view_kanban" model="ir.ui.view">
        <field name="name">cafe.mesa.kanban</field>
        <field name="model">cafe.mesa</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card p-2">

                            <!-- CABECERA -->
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="o_kanban_record_title">
                                        <strong>
                                            <i class="fa fa-cutlery me-1" role="img" aria-label="Mesa"></i>
                                            <field name="name"/>
                                        </strong>
                                    </div>

                                    <div class="mt4">
                                        <span class="badge rounded-pill bg-light text-dark">
                                            <i class="fa fa-map-marker me-1" role="img" aria-label="Ubicación"></i>
                                            <field name="ubicacion"/>
                                        </span>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <field name="activa" widget="boolean_toggle"/>
                                </div>
                            </div>

                            <hr class="my-2"/>

                            <!-- INFO -->
                            <div class="d-flex align-items-center text-muted">
                                <i class="fa fa-users me-2" role="img" aria-label="Capacidad"></i>
                                <span>Capacidad:</span>
                                <strong class="ms-1">
                                    <field name="capacidad"/>
                                </strong>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="mv_cafeteria_mesa_action" model="ir.actions.act_window">
        <field name="name">Mesas</field>
        <field name="res_model">cafe.mesa</field>
        <field name="view_mode">kanban,tree,form</field>

        <!-- AGRUPAR POR UBICACIÓN POR DEFECTO -->
        <field name="context">{'group_by': 'ubicacion'}</field>

        <!-- FORZAMOS NUESTRAS VISTAS -->
        <field name="views" eval="[
            (ref('mv_cafeteria_mesa_view_kanban'), 'kanban'),
            (ref('mv_cafeteria_mesa_view_tree'), 'tree'),
            (ref('mv_cafeteria_mesa_view_form'), 'form')
        ]"/>
    </record>

</odoo>
