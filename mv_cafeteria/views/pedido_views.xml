<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- TREE -->
  <record id="mv_cafeteria_pedido_view_tree" model="ir.ui.view">
    <field name="name">cafe.pedido.tree</field>
    <field name="model">cafe.pedido</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="fecha"/>
        <field name="mesa_id"/>
        <field name="estado"/>
      </tree>
    </field>
  </record>

  <!-- FORM -->
  <record id="mv_cafeteria_pedido_view_form" model="ir.ui.view">
    <field name="name">cafe.pedido.form</field>
    <field name="model">cafe.pedido</field>
    <field name="arch" type="xml">

      <form string="Pedido">

        <header>
          <button name="action_cobrar"
                  type="object"
                  string="Cobrar"
                  class="btn-primary"/>

          <button name="action_cancelar"
                  type="object"
                  string="Cancelar"
                  class="btn-secondary"/>

          <field name="estado"
                 widget="statusbar"
                 statusbar_visible="abierto,cobrado,cancelado"/>
        </header>

        <sheet>

          <!-- Datos generales -->
          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="fecha"/>
            </group>

            <group>
              <field name="mesa_id" domain="[('activa','=',True), ('ocupada','=',False)]"/>
              <field name="estado" readonly="1"/>
            </group>
          </group>

          <!-- Líneas -->
          <notebook>
            <page string="Líneas del pedido">
              <field name="linea_ids" context="{'default_pedido_id': active_id}">
                <tree editable="bottom">
                  <field name="producto_id"/>
                  <field name="cantidad"/>
                  <field name="precio_unitario" readonly="1"/>
                  <field name="subtotal" readonly="1"/>
                </tree>
              </field>
            </page>
          </notebook>

          <!-- Total -->
          <group>
            <group/>
            <group>
              <label for="total"/>
              <div style="font-size:22px; font-weight:bold;">
                <field name="total" readonly="1"/>
              </div>
            </group>
          </group>

        </sheet>
      </form>

    </field>
  </record>

  <!-- ACTION -->
  <record id="mv_cafeteria_pedido_action" model="ir.actions.act_window">
    <field name="name">Pedidos</field>
    <field name="res_model">cafe.pedido</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
