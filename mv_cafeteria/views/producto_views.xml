<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= TREE ================= -->
    <record id="mv_cafeteria_producto_view_tree" model="ir.ui.view">
        <field name="name">cafe.producto.tree</field>
        <field name="model">cafe.producto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tipo"/>
                <field name="precio"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <!-- ================= FORM ================= -->
    <record id="mv_cafeteria_producto_view_form" model="ir.ui.view">
        <field name="name">cafe.producto.form</field>
        <field name="model">cafe.producto</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del producto..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="tipo"/>
                            <field name="precio"/>
                            <field name="activo"/>
                        </group>

                        <group>
                            <field name="image_1920"
                                   widget="image"
                                   class="oe_avatar"
                                   options="{'preview_image': 'image_1920'}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Descripción">
                            <field name="descripcion" placeholder="Descripción del producto..."/>
                        </page>

                        <page string="Alérgenos">
                            <field name="alergeno_ids" widget="many2many_tags"
                                   placeholder="Selecciona alérgenos..."/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= KANBAN (BONITO) ================= -->
    <record id="mv_cafeteria_producto_view_kanban" model="ir.ui.view">
        <field name="name">cafe.producto.kanban</field>
        <field name="model">cafe.producto</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card p-2">

                            <div class="d-flex justify-content-between align-items-start">
                                <div class="d-flex align-items-start">

                                    <div class="me-2">
                                        <field name="image_1920"
                                               widget="image"
                                               options="{'preview_image': 'image_1920'}"
                                               class="o_kanban_image"
                                               style="width:56px; height:56px;"/>
                                    </div>

                                    <div>
                                        <div class="o_kanban_record_title">
                                            <strong><field name="name"/></strong>
                                        </div>

                                        <div class="mt4 text-muted">
                                            <span class="badge rounded-pill bg-light text-dark">
                                                <field name="tipo"/>
                                            </span>
                                        </div>

                                        <div class="mt4">
                                            <strong style="font-size: 16px;">
                                                <field name="precio"/> €
                                            </strong>
                                        </div>
                                    </div>

                                </div>

                                <div class="text-end">
                                    <field name="activo" widget="boolean_toggle"/>
                                </div>
                            </div>

                            <div class="mt8">
                                <field name="alergeno_ids" widget="many2many_tags"
                                       placeholder="Sin alérgenos"/>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="mv_cafeteria_producto_action" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">cafe.producto</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="views" eval="[
            (ref('mv_cafeteria_producto_view_kanban'), 'kanban'),
            (ref('mv_cafeteria_producto_view_tree'), 'tree'),
            (ref('mv_cafeteria_producto_view_form'), 'form')
        ]"/>
    </record>

</odoo>
